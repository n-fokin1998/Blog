@using Blog.WebUI.Areas.Admin.Models
@model List<VotingFormViewModel>

@{
    ViewBag.Title = "Панель администрирования";
    Layout = "~/Views/Shared/_Layout.cshtml";
    @Styles.Render("~/Content/home-styles.css")
    @Styles.Render("~/Content/admin-panel-styles.css")
}

<div class="head">
    <div class="d1"><h1>Панель администрирования</h1></div>
</div>

<div class="line"></div>
<div class="content">
    @Html.ActionLink("Новая статья", "AddArticle", "AdminPanel")<br /><br /><br />
    @Html.ActionLink("Новый тэг статьи", "AddTag", "AdminPanel")<br /><br /><br />
    <div class="best-article-results">
        <span>Результаты голосования «Лучшая статья недели»:</span>
        <table>
            <thead>
                <tr>
                    <td>Название статьи</td>
                    <td>Количество голосов</td>
                </tr>
            </thead>
            <tbody>
                @if (Model.Count != 0)
                {
                    foreach (VotingFormViewModel votingForm in Model)
                    {
                        <tr>
                            <td>@votingForm.Choise</td>
                            <td>@votingForm.Votes</td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td>-</td>
                        <td>-</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>